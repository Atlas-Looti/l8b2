{
	"name": "l8b",
	"version": "0.0.1",
	"description": "Looti Engine",
	"private": true,
	"scripts": {
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"build": "turbo run build ",
		"dev": "turbo run dev --concurrency=15",
		"lint": " biome check --write .",
		"lint:check": " biome check .",
		"format": " biome format --write .",
		"format:check": " biome format --check .",
		"check-types": "turbo run check-types",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"test:coverage": "turbo run test:coverage",
		"new": "node scripts/new-package.mjs",
		"clean": "node scripts/clean.mjs --all",
		"ci": "bun run lint:check && bun run format:check && bun run check-types && bun run build && bun run test"
	},
	"devDependencies": {
		"@vitest/ui": "^4.0.7",
		"jsdom": "^27.1.0",
		"prettier": "^3.6.2",
		"turbo": "2.6.1",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.18",
	"workspaces": [
		"examples/**/*",
		"packages/**/*",
		"scripts/**/*",
		"apps/**/*",
		"!next/**/*",
		"!dist/**/*",
		"!l8b/**/*"
	],
	"dependencies": {
		"@swc/core": "^1.15.0",
		"sirv": "^3.0.2",
		"tsup": "^8.5.0",
		"vitepress": "^1.6.4",
		"vitest": "^4.0.7"
	}
}