{
	"name": "lootiscript-vscode",
	"displayName": "LootiScript",
	"description": "Language support for LootiScript - L8B Game Framework",
	"version": "0.0.1",
	"publisher": "l8b",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Atlas-Looti/l8b"
	},
	"keywords": [
		"lootiscript",
		"l8b",
		"game development",
		"scripting",
		"retro games",
		"game engine"
	],
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "lootiscript",
				"aliases": [
					"LootiScript",
					"loot"
				],
				"extensions": [
					".loot"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./icon.png",
					"dark": "./icon.png"
				}
			}
		],
		"snippets": [
			{
				"language": "lootiscript",
				"path": "./snippets/lootiscript.code-snippets"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "lootiscript-explorer",
					"title": "LootiScript",
					"icon": "$(game)"
				}
			]
		},
		"views": {
			"lootiscript-explorer": [
				{
					"id": "lootiscript-actions",
					"name": "Quick Actions"
				},
				{
					"id": "lootiscript-api",
					"name": "API Reference"
				},
				{
					"id": "lootiscript-examples",
					"name": "Code Examples"
				}
			]
		},
		"grammars": [
			{
				"language": "lootiscript",
				"scopeName": "source.lootiscript",
				"path": "./syntaxes/lootiscript.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "LootiScript",
			"properties": {
				"lootiscript.format.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable code formatting"
				},
				"lootiscript.completion.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable autocomplete and IntelliSense"
				},
				"lootiscript.diagnostics.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable error checking and diagnostics"
				},
				"lootiscript.format.indentSize": {
					"type": "number",
					"default": 1,
					"description": "Indentation size (number of tabs)",
					"minimum": 1,
					"maximum": 4
				},
				"lootiscript.signatureHelp.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable signature help (parameter hints)"
				}
			}
		},
		"commands": [
			{
				"command": "lootiscript.formatDocument",
				"title": "LootiScript: Format Document",
				"icon": "$(symbol-method)"
			},
			{
				"command": "lootiscript.runScript",
				"title": "LootiScript: Run Script",
				"icon": "$(play)"
			},
			{
				"command": "lootiscript.restartLanguageServer",
				"title": "LootiScript: Restart Language Server",
				"icon": "$(debug-restart)"
			},
			{
				"command": "lootiscript.openAssetsEditor",
				"title": "LootiScript: Open Assets Editor",
				"icon": "$(browser)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.90.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"typescript-eslint": "^8.46.3",
		"eslint": "^9.39.1",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1",
		"@l8b/tooling-assets": "workspace:*"
	}
}