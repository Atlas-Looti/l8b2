{
      "comments": {
            "lineComment": "//",
            "blockComment": ["/*", "*/"]
      },
      "brackets": [["{", "}"], ["[", "]"], ["(", ")"]],
      "autoClosingPairs": [
            {
                  "open": "{",
                  "close": "}"
            },
            {
                  "open": "[",
                  "close": "]"
            },
            {
                  "open": "(",
                  "close": ")"
            },
            {
                  "open": "\"",
                  "close": "\"",
                  "notIn": ["string"]
            },
            {
                  "open": "'",
                  "close": "'",
                  "notIn": ["string"]
            },
            {
                  "open": "`",
                  "close": "`",
                  "notIn": ["string", "comment"]
            }
      ],
      "autoCloseBefore": ";:.,=}])>` \n\t",
      "surroundingPairs": [["{", "}"], ["[", "]"], ["(", ")"], ["\"", "\""], ["'", "'"], ["`", "`"]],
      "folding": {
            "markers": {
                  "start": "^\\s*//\\s*#region",
                  "end": "^\\s*//\\s*#endregion"
            }
      },
      "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
      "indentationRules": {
            "increaseIndentPattern": "^((?!.*?//).)*(\\bfunction\\b|\\bif\\b.*\\bthen\\b|\\bwhile\\b.*\\bdo\\b|\\bfor\\b.*\\bdo\\b|\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
            "decreaseIndentPattern": "^((?!.*?/\\*).*\\*/)?\\s*(\\bend\\b|[\\)\\}\\]]).*$"
      },
      "onEnterRules": [
            {
                  "beforeText": "^\\s*\\b(if|while|for)\\b.*\\bthen\\b\\s*$",
                  "action": {
                        "indent": "indent"
                  }
            },
            {
                  "beforeText": "^\\s*\\bfunction\\b.*$",
                  "action": {
                        "indent": "indent"
                  }
            },
            {
                  "beforeText": "^\\s*\\bdo\\b\\s*$",
                  "action": {
                        "indent": "indent"
                  }
            },
            {
                  "beforeText": "^\\s*\\}\\s*$",
                  "afterText": "^\\s*\\}",
                  "action": {
                        "indent": "outdent"
                  }
            }
      ]
}
