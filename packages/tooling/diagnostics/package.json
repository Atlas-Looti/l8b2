{
	"name": "@l8b/diagnostics",
	"version": "1.0.5",
	"description": "Centralized diagnostics system for error and warning messages",
	"type": "module",
	"sideEffects": false,
	"files": [
		"dist/**/*",
		"package.json",
		"README.md"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsup",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/node": "^22.19.1",
		"tsup": "^8.0.0",
		"typescript": "^5.9.3"
	},
	"keywords": [
		"diagnostics",
		"errors",
		"warnings",
		"l8b"
	],
	"publishConfig": {
		"access": "public"
	}
}
